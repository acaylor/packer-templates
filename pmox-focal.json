{
  "variables": {
    "username": "user@pve",
    "password": "password",
    "pmox_url": "https://pve.example.com:8006/api2/json",
    "name_of_vm": "packer-focal",
    "ssh_pass": "password"
  },
  "builders": [
    {
      "type": "proxmox",
      "proxmox_url": "{{user `pmox_url`}}",
      "username": "{{user `username`}}",
      "password": "{{user `password`}}",
      "node": "pve",
      "network_adapters": [
        {
          "bridge": "vmbr0",
          "model": "virtio"
        }
      ],
      "disks": [
        {
          "type": "scsi",
          "disk_size": "32G",
          "storage_pool": "local-sas",
          "storage_pool_type": "lvm-thin",
          "format": "raw"
        }
      ],
      "cores": 2,
      "sockets": 1,
      "memory": 2048,
      "os": "l26",
      "qemu_agent": true,
      "scsi_controller": "virtio-scsi-single",
      "iso_file": "local:iso/ubuntu-20.04-live-server-amd64.iso",
      "http_directory": "http",
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait><esc><wait><f6><wait><esc><wait>",
        "<bs><bs><bs><bs><bs>",
        "autoinstall ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/focal ",
        "--- <enter>"
      ],
      "ssh_username": "ansible",
      "ssh_timeout": "15m",
      "ssh_password": "{{user `ssh_pass`}}",
      "unmount_iso": true,
      "template_name": "focal",
      "template_description": "Ubuntu 20.04 Template created by packer"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/focal-seal.sh"
    }
  ]
}